pipeline {
    agent any

    environment {
        FULL_DOCKER_IMAGE_NAME = 'thevirtualbrain/tvb-run'
        PY2_TAG = 'tvb-framework-py2'
        PY3_TAG = 'tvb-framework-py3'
    }

    stages {
        stage ('Run tests in Python 2') {
            agent {
                docker {
                    image '${FULL_DOCKER_IMAGE_NAME}:${PY2_TAG}'
                    alwaysPull true
                }
            }
            steps {
                sh '''#!/bin/bash
                    source activate tvb-run
                    pytest tvb/tests --junitxml=TEST_OUTPUT/TEST-RESULTS.xml
                '''
                junit 'TEST_OUTPUT/TEST-RESULTS.xml'
            }
        }

        stage ('Build Pypi packages for Python 2') {
            agent {
                docker {
                    image '${FULL_DOCKER_IMAGE_NAME}:${PY2_TAG}'
                }
            }
            steps {
                sh '''#!/bin/bash
                      rm -Rf dist
                      source activate tvb-run
                      python setup.py sdist
                      python  setup.py bdist_wheel
                '''
                archiveArtifacts artifacts: 'dist/tvb*.tar.gz, dist/tvb*.whl'
            }
        }

        stage ('Run tests in Python 3') {
            agent {
                docker {
                    image '${FULL_DOCKER_IMAGE_NAME}:${PY3_TAG}'
                    alwaysPull true
                }
            }
            steps {
                sh '''#!/bin/bash
                    source activate tvb-run
                    pytest tvb/tests --junitxml=TEST_OUTPUT/TEST-RESULTS.xml
                '''
                junit 'TEST_OUTPUT/TEST-RESULTS.xml'
            }
        }

        stage ('Build Pypi packages for Python 3') {
            agent {
                docker {
                    image '${FULL_DOCKER_IMAGE_NAME}:${PY3_TAG}'
                }
            }
            steps {
                sh '''#!/bin/bash
                      mv dist dist-py2
                      source activate tvb-run
                      python setup.py sdist
                      python  setup.py bdist_wheel
                      mv dist dist-py3
                      mv dist-py2 dist
                      cp dist-py3/* dist/
                      rm -Rf dist-py2 dist-py3
                '''
                archiveArtifacts artifacts: 'dist/tvb*.tar.gz, dist/tvb*.whl'
            }
        }

    }

    post {
        changed {
            mail to: 'lia.domide@codemart.ro',
            subject: "Jenkins Pipeline ${currentBuild.fullDisplayName} changed status",
            body: """
                Result: ${currentBuild.result}
                Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'
                Check console output at ${env.BUILD_URL}"""
        }

        success {
            echo 'Build finished successfully'
        }
    }
}